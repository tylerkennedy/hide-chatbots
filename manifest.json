{
  "manifest_version": 3,
  "name": "Hide Chatbots",  
  "description": "Hide Chatbot Popups on Any Website",  
  "version": "1.0",
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title" : "Hide Chatbots"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["style.css"]
    }
  ]
}